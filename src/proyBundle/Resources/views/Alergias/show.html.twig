{% extends '::base.html.twig' %}
{% block title %}Alergia{% endblock %}

{% block body -%}
    <h1>Alergias</h1>
    {{ form(delete_form) }}
    <br><br>
    <table class="record_properties" ellspacing="10" cellpadding="10" border="3">
        <tbody>
            <tr>
                <th>Paciente</th>
                <td>{{ entity.getHistoriaClinica() }}</td>
            </tr>
            <tr>
                <th>Alergia</th>
                <td>{{ entity.alergia }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
        <br><br>
    </table>

        <ul class="record_actions">
        <li>
        <a href="{{ path('alergias_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <a href="{{ path('alergias') }}">
            Ir a lista de alergias
        </a>
    </li>
    
</ul>
{% endblock %}
