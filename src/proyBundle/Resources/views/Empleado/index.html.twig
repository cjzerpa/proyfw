{% extends '::base.html.twig' %}

{% block title %}Lista - Empleados{% endblock %}


{% block body -%}
    <h1>Lista de Empleados</h1>
     <div align=right>
         {{ "now"|date("d/m/Y - H:i ", "America/Caracas")}}
    </div>
            <ul>
        <li>
            <a href="{{ path('empleado_new') }}">
                Agregar nuevo empleado
            </a>
        </li>
    </ul>

    <table class="table table-hover table-bordered" cellspacing="0" cellpading="0" width="100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cargo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.cargo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('empleado_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('empleado_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <ul>
        <li>
            <a href="{{ path('paciente') }}">
                Ir a lista de pacientes
            </a>
        </li>
    </ul>
       <ul>
        <li>
            <a href="{{ path('citas') }}">
                Ir a lista citas
            </a>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('historiaclinica') }}">
                Ver historias clinicas
            </a>
        </li>
    </ul>
    {% endblock %}
