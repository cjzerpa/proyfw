{% extends '::base.html.twig' %}
{% block title %}Referencia Medica{% endblock %}
{% block body -%}
    <h1 align=center>Referencia</h1>
    
    {{ form(delete_form) }}
    
    <div align=right>
        {{ "now"|date("d/m/Y - H:i ", "America/Caracas")}}
    </div>
    
    <br><br>
    
    <table class="table table-bordered" cellspacing="0" cellpadding="0">
        <tbody>
            <tr>
                <th>Paciente</th>
                <td>{{ entity.getVisita().getHistoriaClinica().getPaciente() }}</td>
            </tr>
            <tr>
                <th>Doctor</th>
                <td>{{ entity.nombreDoctor }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>
    <br><br>
        <ul class="record_actions">
        <li>
        <a href="{{ path('referencias_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <a href="{{ path('referencias') }}">
            Ir a lista de Referencias
        </a>
    </li>
    
</ul>
{% endblock %}
