{% extends '::base.html.twig' %}

{% block title %}Lista - Referencias Medicas{% endblock %}

{% block body -%}
    <h1>Lista de Referencias Medicas</h1>
     <div align=right>
         {{ "now"|date("d/m/Y H:i ", "America/Caracas")}}
    </div>
    <ul>
        <li>
            <a href="{{ path('referencias_new') }}">
                Agregar Referencia
            </a>
        </li>
    </ul>

    <table class="table table-hover table-bordered" cellspacing="0" cellpading="0" width="100%">
        <thead>
            <tr>
                <th>Paciente</th>
                <th>Doctor</th>
                <th>Descripcion</th>
                <th>Fecha</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.getVisita().getHistoriaClinica().getPaciente}}</td>
                <td>{{ entity.nombreDoctor }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('referencias_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('referencias_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('visitas') }}">
                Ir a lista de visitas
            </a>
        </li>
    </ul>

        
    {% endblock %}
