{% extends '::base.html.twig' %}

{% block title %}Lista - Visitas{% endblock %}


{% block body -%}
    <h1>Visitas Medicas</h1>
     <div align=right>
    {{ "now"|date("d/m/Y H:i ", "America/Caracas")}}
    </div>
    <ul>
        <li>
            <a href="{{ path('visitas_new') }}">
                Nueva Visita
            </a>
        </li>
    </ul>

    <table class="table table-hover table-bordered" cellspacing="0" cellpading="0" width="100%">
        <thead>
            <tr>
                <th>Paciente</th>
                <th>Medico</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.getHistoriaClinica().getPaciente() }}</td>
                <td>{{ entity.medico }}</td>
                <td>{% if entity.fecha%}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.hora %}{{ entity.hora|date('H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('visitas_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('visitas_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('historiaclinica') }}">
                Ir a historias clinicas
            </a>
        </li>
    </ul>

        
    {% endblock %}
