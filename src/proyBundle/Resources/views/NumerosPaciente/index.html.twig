{% extends '::base.html.twig' %}

{% block title %}Lista - Telefonos Pacientes{% endblock %}


{% block body -%}
    <h1 align=center>Telefonos de pacientes</h1>
     
     <div align=right>
         {{ "now"|date("d/m/Y - H:i ", "America/Caracas")}}
    </div>

     <ul>
        <a href="{{ path('numerospaciente_new') }}">
            <button class="btn btn-success">Agregar nuevo n√∫mero</button>
        </a>
        
    </ul>

    <table class="table table-hover table-bordered" cellspacing="10" cellpadding="10" border="3">
        <thead>
            <tr>
                <th>Paciente</th>
                <th>Tipo</th>
                <th>Numero</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.getPaciente()}}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.numero }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('numerospaciente_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                    <li>
                        <a href="{{ path('numerospaciente_show', { 'id': entity.id }) }}">eliminar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <ul>
        <li>
            <a href="{{ path('paciente') }}">
                Regresar a lista de pacientes
            </a>
        </li>
    </ul>

       
    {% endblock %}
