{% extends '::base.html.twig' %}

{% block title %}Receta{% endblock %}

{% block body -%}
    <h1 align=center>Recetas</h1>

    {{ form(delete_form) }}
    
    <div align=right>
        {{ "now"|date("d/m/Y - H:i ", "America/Caracas")}}
    </div>
    
    <br><br>
    
    <table class="table table-bordered" cellspacing="0" cellpadding="0">
        <tbody>
            <tr>
                <th>Paciente</th>
                <td>{{ entity.getVisita().getHistoriaClinica().getPaciente }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Instrucciones</th>
                <td>{{ entity.instrucciones }}</td>
            </tr>
        </tbody>
    </table>
    <br><br>
        <ul class="record_actions">
        <li>
        <a href="{{ path('recetas_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <a href="{{ path('recetas') }}">
            Ir a lista de recetas
        </a>
    </li>
    

</ul>
{% endblock %}
